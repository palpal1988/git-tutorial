<%= form_for(@photo) do |f| %>
<% if @photo.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

  <ul>
    <% @photo.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="form-group">
  <%= f.label :image, "写真" %><br>
  <%= f.file_field :image%>
</div>
<div class="form-group">
  <div class="row">
    <div class="col-xs-6">
      <%= f.label :title,"タイトル" %>
      <%= f.text_field :title, class:"form-control" %>
    </div>
  </div>
</div>
<div class="form-group">
  <div class="row">
    <div class="col-xs-6">
      <%= f.label :memory,"思い出" %><br>
      <%= f.text_area :memory, class:"form-control" %>
    </div>
  </div>
</div>
<%= f.check_box :id %>
<div class="actions">
  <%= f.submit class:"btn btn-info" %>
</div>
<% end %>
